<style>
  .main-links { display: none !important; }

  .brand-name { display: inline; }                                              
                                                                                
  #image-logo {                                                                 
    position: relative;                                                         
    float: left;                                                                
    width: 22%;                                                                 
    height:385px;                                                               
    padding-top: 15px;                                                          
  }  

  .content {
    text-align: center;
    width: 100%;
  }

</style>

<div class='content'>

<div id = "image-logo">                                                 
  <%= image_tag("keys.png" ,:id => "keys")%>                              
</div>

<%= form_tag :controller => 'user', :action => 'login', :method => :post do %> 
<table>                                                                 
  <tr>                                                                  
    <td><%=text_field(:user, :username, :textCase => "lower",:placeholder => "username") %></td>
  </tr>                                                                 
  <tr>                                                                  
    <td>&nbsp;</td>
  </tr>                                                                 
  <tr>                                                                  
    <td>                                                                
      <%=password_field(:user, :password, :textCase => "lower",         
      :placeholder => "password", :style => "width: 155px;") %>         
      <%= submit_tag "Login" ,:class => "btn btn-primary" , :style => "position: relative;top: -5px;"%>
    </td>                                                               
  </tr>                                                                 
</table>                                                                
<%end%>

</div>
