

<br />


<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h5 class="text-center">SIGN UP</h5>
          <%= form_tag('/user/login', method: 'post', enctype: 'multipart/form-data', class: 'form form-signup') do %>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <%=text_field(:user, :username, :textCase => "lower",:placeholder => "username",:class => 'form-control') %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <%=password_field(:user, :password, :textCase => "lower",:placeholder => "password",:class => 'form-control') %>
              </div>
            </div>
          </div>
          <%= submit_tag "Login" ,:class => "btn btn-sm btn-primary btn-block" , :role => "button"%>
        <%end%>
      </div>
    </div>
  </div>
</div>
</div> 
